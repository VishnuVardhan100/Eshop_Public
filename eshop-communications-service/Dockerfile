FROM openjdk:17

EXPOSE 8084

ADD /eshop-communications-service.jar eshop-communications-service.jar

ENTRYPOINT ["java","-jar","eshop-communications-service.jar"]

ENV SPRING_COMSER_PORT=$SPRING_COMSER_PORT
ENV SPRING_COMSER_NAME=$SPRING_COMSER_NAME
ENV SPRING_DATASOURCE_PASSWORD=$SPRING_DATASOURCE_PASSWORD
ENV SPRING_DATASOURCE_HOST=$SPRING_DATASOURCE_HOST
ENV SPRING_DATASOURCE_PORT=$SPRING_DATASOURCE_PORT
ENV SPRING_DATASOURCE_DBNAME=$SPRING_DATASOURCE_DBNAME
ENV SPRING_DATASOURCE_USERNAME=$SPRING_DATASOURCE_USERNAME
ENV SEND_MAIL_FROM=$SEND_MAIL_FROM
ENV SEND_MAIL_PASSWORD=$SEND_MAIL_PASSWORD