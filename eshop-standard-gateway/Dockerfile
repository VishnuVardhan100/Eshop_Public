FROM openjdk:17

EXPOSE 8765

ADD /eshop-standard-gateway.jar eshop-standard-gateway.jar

ENTRYPOINT ["java","-jar","eshop-standard-gateway.jar"]

ENV SPRING_GATEWAY_PORT=$SPRING_GATEWAY_PORT
ENV SPRING_GATEWAY_NAME=$SPRING_GATEWAY_NAME
ENV SPRING_DATASOURCE_PASSWORD=$SPRING_DATASOURCE_PASSWORD
ENV SPRING_DATASOURCE_HOST=$SPRING_DATASOURCE_HOST
ENV SPRING_DATASOURCE_PORT=$SPRING_DATASOURCE_PORT
ENV SPRING_DATASOURCE_DBNAME=$SPRING_DATASOURCE_DBNAME
ENV SPRING_DATASOURCE_USERNAME=$SPRING_DATASOURCE_USERNAME
ENV JWT_COOKIE_NAME=$JWT_COOKIE_NAME
ENV JWT_EXPIRATION_TIME=$JWT_EXPIRATION_TIME
ENV JWT_SECRET_KEY=$JWT_SECRET_KEY